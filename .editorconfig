root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{kt, kts}]
ktlint_code_style = official
indent_style = space
indent_size = 4
max_line_length = 100

[*.java]
indent_style = space
indent_size = 4
max_line_length = 100

[*.toml]
indent_style = space
indent_size = 2

[*.nix]
indent_style = space
indent_size = 2
